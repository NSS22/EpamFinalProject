<% layout('/layout/page') %>

<p>Введите имя пользователя и пароль. Если такого пользователя нет - он будет создан.</p>

<form id="login-form" class="form-horizontal login-form" >
    <div class="form-group">
        <label for="input-username" class="col-lg-2 control-label">Имя</label>

        <div class="col-lg-10">
            <input id="input-username" name="username" type="text" class="form-control" placeholder="User Name">
        </div>
    </div>
    <div class="form-group">
        <label for="input-password" class="col-lg-2 control-label">Пароль</label>

        <div class="col-lg-10">
            <input id="input-password" name="password" type="password" class="form-control" placeholder="Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-primary">Enter</button>
            <span class="help-block error"></span>
        </div>
    </div>
</form>

<script>
    const form = new FormData(document.getElementById('login-form'));
    console.log(form);
    fetch("/login", {
        method: "POST",
        body: form
    })
        .then(window.location.href = "/")
        .catch();
</script>
